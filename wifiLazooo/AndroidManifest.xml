<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeremyfeinstein.slidingmenu.example"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <user-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <user-permission android:name="android.permission.ACCESS_WIFI_STATE"/>


    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ExampleTheme" >
        <activity
            android:name="com.lazooo.wifi.android.application.ExampleListActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lazooo.wifi.android.application.PropertiesActivity" />
        <activity android:name="com.lazooo.wifi.android.application.LeftAndRightActivity" />
        <activity android:name="com.lazooo.wifi.android.application.AttachExample" />
        <activity android:name="com.lazooo.wifi.android.application.anim.CustomScaleAnimation" />
        <activity android:name="com.lazooo.wifi.android.application.anim.CustomZoomAnimation" />
        <activity android:name="com.lazooo.wifi.android.application.anim.CustomSlideAnimation" />
        <activity android:name="com.lazooo.wifi.android.application.SlidingTitleBar" />
        <activity android:name="com.lazooo.wifi.android.application.SlidingContent" />
        <activity android:name="com.lazooo.wifi.android.application.ViewPagerActivity" />
        <activity android:name="com.lazooo.wifi.android.application.fragments.FragmentChangeActivity" />
        <activity android:name="com.lazooo.wifi.android.application.fragments.ResponsiveUIActivity" />
        <activity
            android:name="com.lazooo.wifi.android.application.fragments.BirdActivity"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar" />
        <activity android:name="com.crittercism.NotificationActivity"/>
        <receiver android:name="com.lazooo.wifi.android.service.TestReceiver">
            <intent-filter>
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED"/>
                <action android:name="android.net.wifi.STATE_CHANGE"/>
            </intent-filter>
        </receiver>
        <service android:name="com.lazooo.wifi.android.service.LazoooWifiService"
                 android:exported="false"/>
    </application>

</manifest>